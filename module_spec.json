{
    "SchemaVersion": "0.2",
    "Runtime": "docker",
    "RuntimeOptions": {
        "ContainerImage": "${idx:ia_video_ingestion:$EII_VERSION}",
        "Privileged": true,
        "TemporaryVolumes": [
            "/dev:/dev",
            "/var/tmp:/var/tmp"
        ]
    },
    "DataStore": {
        "Protocol": "DIRECT",
        "DataBuckets": [
            {
                "Name": "EII/VideoIngestion",
                "Permissions": "RO"
            },
            {
                "Name": "EII/GlobalEnv",
                "Permissions": "RO"
            },
            {
                "Name": "EII/Publickeys",
                "Permissions": "RO"
            }
        ]
    }
}
