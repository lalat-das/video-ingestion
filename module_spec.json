{
    "SchemaVersion": "0.2",
    "Runtime": "docker",
    "RuntimeOptions": {
        "ContainerImage": "ia_video_ingestion:$EIS_VERSION",
        "Privileged": true,
        "TemporaryVolumes": [
            "/dev:/dev",
            "/var/tmp:/var/tmp",
            "/opt/Intel/OpenCL/Boards:/opt/Intel/OpenCL/Boards",
            "/opt/altera:/opt/altera",
            "/opt/intel/intelFPGA:/opt/intel/intelFPGA"
        ]
    },
    "DataStore": {
        "Protocol": "DIRECT",
        "DataBuckets": [
            {
                "Name": "EIS/VideoIngestion",
                "Permissions": "RO"
            },
            {
                "Name": "EIS/GlobalEnv",
                "Permissions": "RO"
            },
            {
                "Name": "EIS/Publickeys",
                "Permissions": "RO"
            }
        ]
    }
}